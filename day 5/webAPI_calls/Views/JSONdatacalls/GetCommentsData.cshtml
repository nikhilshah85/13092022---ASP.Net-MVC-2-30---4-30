

<script>
    function showComments()
    {
        fetch('https://jsonplaceholder.typicode.com/comments').then(response=>response.json())
                                                              .then( data =>{
                                                                  for(var i=0;i<data.length;i++)
                                                                  {
                                                                      $("table").append("<tr>" + 
                                                                      "<td>" + data[i].postId + "</td>" +
                                                                      "<td>" + data[i].id + "</td>" +
                                                                      "<td>" + data[i].name + "</td>" +
                                                                      "<td>" + data[i].email + "</td>" +
                                                                      "<td>" + data[i].body + "</td>" +
                                                                      
                                                                      
                                                                      + "</tr>")
                                                                  }
                                                              })
                                                              .catch(err=>{
                                                                  console.log(err);
                                                              })
    }
</script>

<button class="btn btn-danger" onClick="showComments()">Get Comments
</button>

